<h1><%= @dish.name %></h1>

<img src="<%= @dish.image_url %>" alt="">
<p><%= @count %></p>


<form action="/admin/dishes/<%= @dish.id %>/edit" method="get">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <button>Edit</button>
</form>

<form action="/admin/dishes/<%= @dish.id %>" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

  <input type="hidden" name="_method" value="delete">
  <button>Delete</button>
</form>

<form action="/admin/likes/<%= @dish.id %>" method="post">
  <button> Like </button>
</form>
